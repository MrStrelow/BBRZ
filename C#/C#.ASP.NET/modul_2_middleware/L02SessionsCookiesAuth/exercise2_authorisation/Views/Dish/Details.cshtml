@model DishViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>@Model.Name</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Preis: @Model.Price.ToString("C")</h5>

            <hr />

            @if (Model.Ingredients != null && Model.Ingredients.Any())
            {
                <h4>Zutaten</h4>
                <ul>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <li>@ingredient.Name</li>
                    }
                </ul>
            }

            @if (Model.Preparationstep != null && Model.Preparationstep.Any())
            {
                <h4>Zubereitungsschritte</h4>
                <ol>
                    @foreach (var step in Model.Preparationstep.OrderBy(s => s.StepOrder))
                    {
                        <li>@step.Description</li>
                    }
                </ol>
            }

            @if ((Model.Ingredients == null || !Model.Ingredients.Any()) &&
                        (Model.Preparationstep == null || !Model.Preparationstep.Any()))
            {
                <p class="text-muted">Für mehr Details (Zutaten, Schritte) fügen Sie `&verbose=true` zur URL hinzu... oder Drücke den Butten weiter unten.</p>
            }

        </div>
        <div class="card-footer">
            <a asp-controller="Fruehstueck" asp-action="Index" class="btn btn-primary">Zurück zur Hauptseite</a>
        </div>
    </div>
</div>