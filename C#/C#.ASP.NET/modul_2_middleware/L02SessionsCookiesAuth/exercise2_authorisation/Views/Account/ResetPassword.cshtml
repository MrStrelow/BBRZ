@model FruehstuecksBestellungMVC.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Passwort zurücksetzen";
}
<h2>Passwort zurücksetzen</h2>
<form asp-action="ResetPassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Code" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group mb-3">
        <label asp-for="Password">Neues Passwort</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zurücksetzen</button>
</form>