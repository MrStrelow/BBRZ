@model MenuViewModel

@{
    ViewData["Title"] = "Neues Menü erstellen";
}

<h1>Neues Menü</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Menü Name</label>
                <input asp-for="Name" class="form-control" placeholder="z.B. Sonntags-Spezial" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Enthaltene Gerichte wählen (Strg + Klick)</label>
                <select asp-for="SelectedDishIds" class="form-control" style="height: 200px;" multiple>
                    @foreach (var dish in Model.AvailableDishes)
                    {
                        <option value="@dish.Id">
                            @dish.Name (@dish.Price.ToString("C"))
                        </option>
                    }
                </select>
                <span asp-validation-for="SelectedDishIds" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Speichern" class="btn btn-primary" />
                <a asp-controller="Fruehstueck" asp-action="Index" class="btn btn-secondary">Zurück zur Hauptseite</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}