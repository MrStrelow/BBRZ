@model List<MvcTodoApp.Models.Todo>

@{
    ViewData["Title"] = "Meine Todos";
}

<h1>@ViewData["Title"]</h1>

<hr />
<h4>Suchen & Filtern</h4>
<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-auto">
        <label for="query" class="visually-hidden">Suche</label>
        <input type="text" name="query" class="form-control" placeholder="Titel suchen..." value="@ViewBag.CurrentQuery">
    </div>
    <div class="col-auto">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="sortDesc" value="desc" id="sortDesc" @(ViewBag.SortBy == "desc" ? "checked" : "")>
            <label class="form-check-label" for="sortDesc">
                absteigend sortieren.
            </label>
        </div>
    </div>
    <div class="col-auto">
        <label for="limit" class="visually-hidden">Limit</label>
        <input type="number" name="limit" class="form-control" placeholder="Limit" style="width: 100px;" value="@ViewBag.Limit">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Anwenden</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>
<hr />


<p>
    <a asp-action="Create" class="btn btn-success">Neues Todo</a>
    <a asp-action="Archived" class="btn btn-info">Archiv anzeigen</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Status</th>
            <th>Titel</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsDone ? "table-success" : "")">
                <td>
                    @if (item.IsDone)
                    {
                        <span class="badge bg-success">Erledigt</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Offen</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: inherit;">
                        <strong>@item.Title</strong>
                    </a>
                    <br />
                    <small class="text-muted">Erstellt am: @item.CreatedAt.ToShortDateString()</small>
                </td>
                <td>
                    <form asp-action="ToggleDone" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm @(item.IsDone ? "btn-warning" : "btn-success")">
                            @(item.IsDone ? "Reaktivieren" : "Erledigt")
                        </button>
                    </form>
                    <form asp-action="Archive" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-info">Archivieren</button>
                    </form>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>