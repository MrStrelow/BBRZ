@model MvcTodoApp.Models.Todo

@{
    ViewData["Title"] = "Neues Todo erstellen";
}

<h1>Neues Todo erstellen</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @* This div displays any model-level error messages *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                @* asp-for reads the [Display] attribute from your model for the label text *@
                <label asp-for="Title" class="control-label"></label>
                @* asp-for generates an <input> with the correct type, id, and name *@
                <input asp-for="Title" class="form-control" />
                @* asp-validation-for displays the error message from [Required] or [StringLength] *@
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                @* Because of [DataType(DataType.MultilineText)], a textarea is more suitable *@
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                @* Because CreatedAt is a DateTime, the tag helper generates an input with type="datetime-local" *@
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDone" /> Erledigt?
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Erstellen</button>
                <a asp-action="Index" class="btn btn-secondary">Zurück zur Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // This partial view includes the necessary client-side validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}