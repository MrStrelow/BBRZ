@model FruehstuecksBestellungMVC.ViewModels.DeliveryManagementViewModel
@{
    ViewData["Title"] = "Lieferung verwalten";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>Lieferung für @Model.CustomerName (Order #@Model.OrderId)</h3>
        </div>
        <div class="card-body">
            <form asp-action="UpdateDelivery" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="DeliveryId" />
                <input type="hidden" asp-for="OrderId" />

                <input type="hidden" asp-for="IsCanceled" id="hdnIsCanceled" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <h5>Daten</h5>
                        <p><strong>Bestellt am:</strong> @Model.OrderDate.ToString("g")</p>

                        <div class="mb-3">
                            <label asp-for="ExpectedDeliveryDate" class="form-label"></label>
                            <input asp-for="ExpectedDeliveryDate" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ActualDeliveryDate" class="form-label fw-bold">Tatsächliches Lieferdatum</label>
                            <input asp-for="ActualDeliveryDate" class="form-control border-primary"
                                   type="datetime-local"
                                   max="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="ActualDeliveryDate" class="text-danger"></span>
                            <small class="text-muted">Setzen Sie dieses Datum bei erfolgreicher Lieferung.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeliveryComment" class="form-label"></label>
                            <textarea asp-for="DeliveryComment" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5>Beweis</h5>
                        <div class="mb-3">
                            <label asp-for="DeliveryImage" class="form-label">Foto hochladen</label>
                            <input asp-for="DeliveryImage" class="form-control" type="file" accept=".jpg,.jpeg,.png,.gif" />
                            <span asp-validation-for="DeliveryImage" class="text-danger"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                        {
                            <div class="border p-2 text-center">
                                <p>Aktuelles Bild:</p>
                                <img src="@Model.ExistingImagePath" class="img-fluid" style="max-height: 200px;" alt="Beweisfoto" />
                            </div>
                        }
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Zurück</a>

                    <div>
                        @if (Model.CanBeCanceled)
                        {
                            <button type="button" class="btn btn-danger me-2" onclick="cancelOrder()">
                                Bestellung Stornieren
                            </button>
                        }
                        else
                        {
                            <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" title="Kann nicht mehr storniert werden">
                                <button class="btn btn-danger disabled me-2" type="button">Stornieren</button>
                            </span>
                        }

                        <button type="submit" class="btn btn-success">Speichern & Bestätigen</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function cancelOrder() {
        if (confirm("Sind Sie sicher, dass Sie diese Bestellung stornieren möchten?")) {
            document.getElementById('hdnIsCanceled').value = "true";
            // Wir müssen das Datum leeren, damit die Validierung "nicht stornieren wenn Datum gesetzt" im Backend konsistent bleibt,
            // obwohl die Logik dort prüft ob *vorher* schon eins da war.
            document.querySelector('form').submit();
        }
    }
</script>